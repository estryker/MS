<!DOCTYPE html>
<html>
	
  <head>
   <%	if  @squeak and @squeak_map_preview %> 
	<meta name="description" content="<%=@squeak.text%>" />
	<link rel="image_src" href="<%= @squeak_map_preview %>" />
	<% end %> 
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
